/* pages/add/add.wxss */
.main{
  display: flex;
  flex-direction: column;
  width: 750rpx;
  align-items: center;
  margin-top:50rpx;
  justify-content: flex-start;
  font-size:15px;
  color:#4F4F4F;
}
/*模块选择*/
.mode_choise{
  width:80%;
  border-bottom: 1px solid #D3D3D3;
  padding:15rpx 0;
  display: flex;
  flex-direction: row;
}
/*内容输入*/
.input_content{
  width:80%;
  margin:50rpx 0;
}
/*提交按钮*/
.submit_button{
  width:80%;
  background-color:#EE0000;
  margin:50rpx 0; 
  color:white;
}
/*输入框*/
.shuru1{
  width:100%;
  margin-top:20rpx;
  border:1px solid #D3D3D3;
}
/*是否开启匿名*/
.is_anonymous{
  width:80%;
  border-bottom: 1px solid #D3D3D3;
  padding:15rpx 0;
}
/*图片选择*/
.images-wrapper {
  width:80%;
  padding:15rpx 0;
  border-bottom: 1px solid #D3D3D3;
}
.images-list {
  display: flex;
  margin-top: 20rpx;
  flex-wrap: wrap;
}
.images-image {
  width: 150rpx;
  height: 150rpx;
  margin: 10rpx;
}
/*选择图片的图案*/
.image-plus {
  border: 1px solid #D3D3D3;
  position: relative;
}
.image-plus-horizontal {
  position: absolute;
  top: 50%;
  left: 50%;
  background-color: #d9d9d9;
  width: 4rpx;
  height: 80rpx;
  transform: translate(-50%, -50%);
}
.image-plus-vertical {
  position: absolute;
  top: 50%;
  left: 50%;
  background-color: #d9d9d9;
  width: 80rpx;
  height: 4rpx;
  transform: translate(-50%, -50%);
}